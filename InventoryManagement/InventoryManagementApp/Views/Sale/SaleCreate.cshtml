@model App.Core.ViewModel.OperationModule.SaleViewModel
@{
    ViewBag.Title = "SaleCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/jquery.fancybox.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="panel panel-primary">
            <div class="panel-heading">SaleEntry</div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.SalesNo, "Sales No*", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.SalesNo, new { htmlAttributes = new { @class = "form-control", @tabindex = "1", @disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.SalesNo, "", new { @class = "text-danger", @id = "TraineePersonalNoMsg" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.CustomerId, "Customer *", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(c => c.CustomerId, null, "", htmlAttributes: new { @class = "form-control", @tabindex = "22" })
                            @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Date, "Date", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker" } })
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Remark, "Remark", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.HiddenFor(c => c.Id)
                        <input id="btnSubmit" type="button" value="Submit" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
        <div class="box box-primary">
            <div class="heading">Sales List</div>
            <div class="box-body">
                <table id="salesHistory" class="table table-bordered table-hover display">
                    <thead>
                        <tr>
                            <th>Sales</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Remark</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <input type="hidden" id="pdf" />
    </div>
</div>
@section ViewSpecificJavascript
{
    <script src="~/Scripts/FormScript/OperationModule/salesCreate.js"></script>
    <script src="~/Scripts/jquery.fancybox.js"></script>


}